<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.getnow.getnowdriver.activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:visibility="visible"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="My Bus"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19.5dp"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Bus Name"
            android:id="@+id/busNameText"
            android:layout_marginTop="4dp"
            android:textColor="@color/textDark"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:id="@+id/ownerText"
            android:layout_marginTop="4dp"
            android:textColor="@color/textDark"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Current Trip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19.5dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/routeText"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:textColor="@color/textLight"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Start Trip"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/tripButton1"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Start Trip"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/tripButton2"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="End Trip"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/tripButton3"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>
